<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciceSynthese.PageProfil">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>


    <StackLayout>
        <Grid Padding="20" BackgroundColor="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Source="retour.png" BackgroundColor="Transparent" x:Name="btnRetour" Clicked="btnRetour_Clicked" Grid.Column="0"/>
          
            <ImageButton Source="valider.png" HorizontalOptions="End"  BackgroundColor="Transparent" x:Name="btnValider" Clicked="btnValider_Clicked" Grid.Column="2"/>
        </Grid>
  

        <Entry Placeholder="Nom" x:Name="entNom" />
        <Entry Placeholder="Prenom" x:Name="entPrenom" />
        <Entry Placeholder="Age" x:Name="entAge" />

    </StackLayout>
    
</ContentPage>